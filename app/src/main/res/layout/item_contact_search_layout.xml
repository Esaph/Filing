<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_contact_search_layout_LinearLayoutRoot"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_contact_search_layout_TextViewKundenname"
        android:ellipsize="end"
        android:textStyle="bold"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_contact_search_layout_TextViewTelefon"
        android:ellipsize="end"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_contact_search_layout_TextViewAdresse"
        android:ellipsize="end"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="16dp"
        android:background="@drawable/background_rounded_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp" />


</LinearLayout>