<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fragment_fragment_viewpager_item_board_list_RelativLayoutTop"
            android:background="@drawable/background_rounded_divider"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fragment_fragment_viewpager_item_board_list_TextView_ListenName"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/fragment_fragment_viewpager_item_board_list_LinearLayoutIcons"
                android:layout_toLeftOf="@+id/fragment_fragment_viewpager_item_board_list_LinearLayoutIcons"
                android:gravity="center|start"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:padding="9dp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:textSize="@dimen/h4"
                android:text="Listen Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/fragment_fragment_viewpager_item_board_list_LinearLayoutIcons"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/fragment_fragment_viewpager_item_board_list_list_ImageViewKarteErstellen"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    android:padding="14dp"
                    app:srcCompat="@drawable/ic_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <ImageView
                    android:id="@+id/fragment_fragment_viewpager_item_board_list_ImageViewDeleteList"
                    android:padding="14dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    app:srcCompat="@drawable/ic_delete"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>


        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_fragment_viewpager_item_board_list_FrameLayout"
            android:layout_below="@+id/fragment_fragment_viewpager_item_board_list_RelativLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>