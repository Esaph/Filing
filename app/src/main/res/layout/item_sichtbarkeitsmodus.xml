<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_toLeftOf="@+id/item_sicherbarkeitsmodus_ImageViewModus"
        android:layout_toStartOf="@+id/item_sicherbarkeitsmodus_ImageViewModus"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_sichtbarkeitsmodus_TextViewPolicy"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h4"
            android:textStyle="bold"
            android:text="Ã–ffentlich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/item_sichtbarkeitsmodus_TextViewPolicyDescription"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/h5"
            android:text="@string/board_privacy_public_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <ImageView
        android:id="@+id/item_sicherbarkeitsmodus_ImageViewModus"
        app:srcCompat="@drawable/ic_locked"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="25dp"
        android:layout_height="25dp" />



</RelativeLayout>